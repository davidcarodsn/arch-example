---
import BreadCumbProductSection from "@components/product/BreadCumbProductSection.astro";
import Layout from "@layouts/Layout.astro";
import { allCatalogData } from "src/utils/data/catalogData";
import { PAGES } from "src/utils/types/pagesTypes";
export function getStaticPaths() {
  return [
    ...allCatalogData
  ].map((product) => {
    return { params: { product: product.img } };
  });
}

const { product } = Astro.params;

const productSelected = allCatalogData.filter((obj) => obj.img === product)[0];
---

<Layout pageTitle={productSelected.name}>

<div class="page-wrap">
  <BreadCumbProductSection product={productSelected.name} />
  <!-- Single Product -->
  <section class="single-product" style="margin-top: 10%;">
    <div class="section-content section-content--w1140">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-md-6">
            <div class="single-product-img">
              <img alt={`${productSelected.img}`} src={`/img/products/${productSelected.img}/${productSelected.img}.png`} />
            </div>
