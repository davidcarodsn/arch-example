---
import 'animate.css';
import MainHeader from "../components/common/MainHeader.astro";
import Loader from "../components/common/Loader.astro";
import BackToTop from "../components/common/BackToTop.astro";
import Footer from "../components/common/Footer.astro";
import WhatsAppButtonComponent from "../components/common/WhatsAppButtonComponent.jsx";
import { PAGES } from "../utils/types/pagesTypes";
import { getFormatData } from 'src/utils/helpers/getFormatData';

const { pageTitle } = Astro.props;
---

<!DOCTYPE html lang="en" class="homepage-box">
<head>
  <title>{pageTitle}</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Fabricante líder de aberturas de aluminio de alta calidad. Expertos en diseño y fabricación de ventanas, puertas y más.">
  <link rel="stylesheet" type="text/css" href="/font/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/font/mdi-font/css/material-design-iconic-font.min.css">
  <link rel="stylesheet" type="text/css" href="/vendor/bootstrap4/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/vendor/owl-carousel/animate.css">
  <link rel="stylesheet" type="text/css" href="/vendor/owl-carousel/owl.carousel.min.css">
  <link rel="stylesheet" type="text/css" href="/vendor/owl-carousel/owl.theme.default.min.css">
  <link rel="stylesheet" type="text/css" href="/vendor/revolution/settings.css">
  <link rel="stylesheet" type="text/css" href="/vendor/revolution/navigation.css">
  <link rel="stylesheet" type="text/css" href="/vendor/revolution/layers.css">
  <link rel="stylesheet" type="text/css" href="/vendor/colorbox/colorbox.css">
  <link rel="stylesheet" type="text/css" href="/vendor/lightbox2/src/css/lightbox.css">
  <link rel="stylesheet" type="text/css" href="/vendor/smk-accordion/accordion.css">
  {
    pageTitle === PAGES.ABOUT_US && (
      <link rel="stylesheet" type="text/css" href="/vendor/slick/slick.css">
      <link rel="stylesheet" type="text/css" href="/vendor/slick/slick-theme.css">
    )
  }
  { pageTitle === PAGES.HOME && <link rel="stylesheet" type="text/css" href="/vendor/lightbox2/src/css/lightbox.css"> }
  <!-- Main CSS -->
  <link rel="stylesheet" type="text/css" href="/css/font.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body class={ pageTitle === PAGES.HOME || pageTitle === PAGES.CONTACT || "Blog" ? '' : 'box' }>
  <!-- Page Loader -->
  <Loader />
  <!-- Header -->
  <MainHeader />
  <!-- Child -->
  <slot />
  <!-- Footer -->
  <Footer />
  <!-- Back to Top -->
  <BackToTop />
  <!-- WhatsApp Glove Button -->
  <WhatsAppButtonComponent client:load/>
  <!-- =================== PLUGIN JS ==================== -->
  <script is:inline src="/vendor/jquery-3.2.1.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/wow/wow.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/bootstrap4/popper.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/bootstrap4/bootstrap.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/counter-up/jquery.waypoints.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/counter-up/jquery.counterup.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/lightbox2/src/js/lightbox.js" type="text/javascript"></script>
  <script is:inline src="/vendor/owl-carousel/owl.carousel.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/revolution/jquery.themepunch.revolution.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/revolution/jquery.themepunch.tools.min.js" type="text/javascript"></script>
  <script is:inline src="/vendor/isotope/isotope.pkgd.min.js" type="text/javascript"></script>
  <!-- Local Revolution -->
  <!-- <script type="text/javascript" src="/vendor/revolution/local/revolution.extension.migration.min.js"></script> -->
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.actions.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.carousel.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.kenburn.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.layeranimation.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.navigation.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.parallax.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.slideanims.min.js"></script>
  <script is:inline type="text/javascript" src="/vendor/revolution/local/revolution.extension.video.min.js"></script>
  <script is:inline type="text/javascript">
    $(document).ready(function () {
      lightbox.option({
        'resizeDuration': 200,
        'wrapAround': false,
        'alwaysShowNavOnTouchDevices': true,
      });
    });
  </script>
  <!-- =================== CUSTOM JS ==================== -->
  <script is:inline type="text/javascript" src="/js/main.js"></script>
  <script is:inline type="text/javascript" src="/js/revo-custom.js"></script>
  <script is:inline type="text/javascript" src="/js/wow-custom.js"></script>
  <script is:inline type="text/javascript" src="/js/count.js"></script>
</body>
</html>